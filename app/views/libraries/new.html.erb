<form action="/libraries" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new Library:</p>
  <label for="name">Library Name</label><br>
  <input type="text" name='library[name]' /><br/>
  <label for="name">Public?</label><br>
  <input type='checkbox' name='library[public]'/><br/>
  <label for="name">Years Opened</label><br>
  <input type='text' name='library[years_opened]'/><br/>
  <input type="submit" />
</form>
