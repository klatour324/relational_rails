<form action="/libraries" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new Library:</p>
  <label for="name">Library Name</label><br>
  <input id="library_name" type="text" name='library[name]' /><br/>
  <label for="name">Public?</label><br>
  <input id="a_checkbox" type="checkbox" name="library[public]"/><br/>
  <label for="name">Years Opened</label><br>
  <input id="years_opened" type="text" name="library[years_opened]"/><br/>
  <input id="create_library" type="submit" value="Create Library" />
</form>
