<form action="/bookstores" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new bookstore:</p>
  <label for="name">Bookstore Name</label><br>
  <input type='text' name='bookstore[name]'/><br/>
  <label for="name">Bookstore Inventory</label><br>
  <input type='number' name='bookstore[inventory]'/><br/>
  <label for="name">Open to the public?</label><br>
  <input type='checkbox' name='bookstore[open]'/><br/>
  <input type='submit'/>
</form>
