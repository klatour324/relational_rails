<h1>All Bookstores</h1>

<% @bookstores.each do |bookstore| %>
  <a href="/bookstores/<%= bookstore.id %>"><h3><%= bookstore.name %></h3></a>
  <h4>Books in stock:</h4>
  <p><%= bookstore.inventory %></p>
  <h4>Open?</h4>
  <p><%= bookstore.open %></p>
  <a><%= link_to "Delete Bookstore", "/bookstores/#{bookstore.id}", method: :delete %></a>
  <a><%= link_to "Update Bookstore", "/bookstores/#{bookstore.id}/edit"%></a>
<% end %>
