<a href="/libraries">Library</a>

<h1><%= @library.name %>'s Books</h1>


<h2>Please enter a number:</h2>
<%= form_with url: "/libraries/#{@library.id}/books", method: :get, local: :true do |form| %>
  <%= form.label :title, "Only return records with more than 'n' number of pages" %>
  <%= form.number_field :title, id: 'title' %>
  <%= form.submit "Submit" %>
<% end %><br>

<%= form_with url: "/libraries/#{@library.id}/books", method: :get, local: :true do |form| %>
  <%= form.hidden_field :alpha_sort %>
  <%= form.submit "Sort Books Alphabetically" %>
<% end %>

  <h3><a><%= link_to "Create Book", "/libraries/#{@library.id}/books/new" %></a></h3>

<ul>
  <% @books.each do |book| %>
    <li>
      <h2>Book Title:</h2>
      <h3><%= book.title %></h3>

      <h2>Checked Out?</h2>
      <h3><%= book.checked_out %></h3>

      <h2>Number of Pages:</h2>
      <h3><%= book.pages %></h3>

      <h2>Created At:</h2>
      <h3><%= book.created_at %></h3>

      <h2>Updated At:</h2>
      <h3><%= book.updated_at %></h3>
    </li>
  <% end %>
</ul>
