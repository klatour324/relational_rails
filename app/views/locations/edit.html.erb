<form action="/locations/<%= @location.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <p>Edit</p>
  <label for="name">Location Name</label><br>
  <input type='text' name='location[name]' value="<%= @location.name %>"/><br/>
  <label for="name">Location Population</label><br>
  <input type='integer'name='location[population]' value="<%= @location.population %>"</input><br/>
  <label for="name">Urban?</label><br>
  <input type='checkbox'name='location[urban]' value="<%= @location.urban %>"</input><br/>
  <input type='submit'/>
</form>
